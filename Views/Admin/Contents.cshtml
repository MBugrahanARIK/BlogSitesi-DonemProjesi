@{
    Layout = "../Shared/_LayoutAdmin.cshtml";
}

@model Tuple<List<Content>, List<User>>


<link rel="stylesheet" href="https://code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://code.jquery.com/ui/1.12.1/jquery-ui.min.js"></script>

<!-- Filtreleme -->
<form asp-controller="Admin" asp-action="Contents" method="get">
    <div class="row">
        <div class="col-md-2">
            <div class="card">
                <div class="form-group">
                    <label for="exampleFormControlSelect1">Gösterilecek İçerik</label>
                    <select class="form-select"
                            id="exampleFormControlSelect1"
                            name="maxIndex">
                        <option>10</option>
                        <option>25</option>
                        <option>50</option>
                        <option>100</option>
                    </select>
                </div>
            </div>
        </div>
        <div class="col-md-2">
            <div class="card">
                <div class="form-group">
                    <label for="exampleFormControlSelect1">Kullanıcı</label>
                    <select class="form-select"
                            id="exampleFormControlSelect1"
                            name="username">
                        <option selected>Kullanıcı Adı</option>
                        @foreach (var item in Model.Item2)
                        {
                            <option value="@item.id">@item.surname</option>
                        }
                    </select>
                </div>
            </div>
        </div>

        <div class="col-md-2">
            <div class="form-group">
                <label for="email2">Başlangıç Tarihi</label>
                <input type="date" class="form-control" id="email1" name="firstDate" placeholder="dd/aa/yyyy" />
            </div>

        </div>

        <div class="col-md-2">
            <div class="form-group">
                <label for="email2">Bitiş Tarihi</label>
                <input type="date" class="form-control" id="email1" name="lastDate" placeholder="dd/aa/yyyy" />
            </div>
        </div>
        <div class="col-md-2">
            <button type="submit" class="btn btn-primary btn-round" style="margin-top:30px">
                Filtrele
            </button>
        </div>
    </div>
</form>
<!-- Filtreleme -->




<div class="card-header">
    <div class="d-flex align-items-center">
        <h4 class="card-title">Add Row</h4>
        <a href="~/Admin/NewContent" class="ms-auto">
            <button class="btn btn-primary btn-round ">
                <i class="fa fa-plus"></i>
                Add Row
            </button>
        </a>
    </div>
</div>
<div class="card-body">
    <!-- Modal -->
    <div class="modal fade"
         id="addRowModal"
         tabindex="-1"
         role="dialog"
         aria-hidden="true">
    </div>

    <div class="table-responsive">
        <table id="add-row"
               class="display table table-striped table-hover">
            <thead>
                <tr>
                    <th>Başlık</th>
                    <th>Kullanıcı</th>
                    <th>İçerik</th>
                    <th>Eklenme Tarihi</th>
                    <th style="width: 10%">İşlemler</th>
                </tr>
            </thead>
            <tfoot>
                <tr>
                    <th>Başlık</th>
                    <th>Kullanıcı</th>
                    <th>İçerik</th>
                    <th>Eklenme Tarihi</th>
                    <th style="width: 10%">İşlemler</th>
                </tr>
            </tfoot>

            @foreach (var item in Model.Item1)
            {
                <tr>
                    <td>@item.title</td>
                    <td>@item.user.surname</td>
                    <td>@Html.Raw(item.content.Length > 50 ? item.content.Substring(0, 50) + "..." : item.content)</td>
                    <td>@item.date</td>
                    <td>
                        <div class="form-button-action">
                            <button type="button"
                                    data-bs-toggle="tooltip"
                                    title=""
                                    class="btn btn-link btn-primary btn-lg"
                                    data-original-title="Edit Task">
                                <i class="fas fa-comment"></i>
                                Yorumlar
                            </button>
                            <form asp-action="DeleteContent"
                                  asp-route-id="@item.id"
                                  asp-controller="Admin"
                                  method="post">
                                <button name="delete"
                                        type="submit"
                                        data-bs-toggle="tooltip"
                                        title=""
                                        class="btn btn-link btn-danger"
                                        data-original-title="Remove">
                                    <i class="fa fa-times"></i>
                                    Sil
                                </button>
                            </form>
                        </div>
                    </td>
                </tr>
            }
            </tbody>
        </table>
    </div>

    <div class="demo">
        <ul class="pagination pg-primary">
            <li class="page-item">
                <a class="page-link" href="#" aria-label="Previous">
                    <span aria-hidden="true">&laquo;</span>
                    <span class="sr-only">Previous</span>
                </a>
            </li>
            <li class="page-item active">
                <a class="page-link" href="#">1</a>
            </li>
            <li class="page-item">
                <a class="page-link" href="#">2</a>
            </li>
            <li class="page-item">
                <a class="page-link" href="#">3</a>
            </li>
            <li class="page-item">
                <a class="page-link" href="#" aria-label="Next">
                    <span aria-hidden="true">&raquo;</span>
                    <span class="sr-only">Next</span>
                </a>
            </li>
        </ul>
    </div>
</div>


@section Scripts {
}